      <Label fx:id="labelOldPassword" layoutX="26.0" layoutY="167.0" text="Old password:" textFill="#bc2626">
         <font>
            <Font size="15.0"/>
         </font>
      </Label>
      <Label fx:id="labelNewPassword" layoutX="23.0" layoutY="218.0" text="New password:" textFill="#bc2626">
